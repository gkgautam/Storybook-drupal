{#
/**
 * Card Grid component
 *
 * Variables:
 * - title: Grid section title
 * - description: Grid section description
 * - cards: Array of card objects, each with:
 *   - title: Card title
 *   - description: Card description
 *   - imageUrl: URL for the card image
 *   - buttonText: Text for the card button
 *   - theme: Theme variation (default, dark, compact)
 * - columns: Number of columns (2, 3, 4)
 * - theme: Theme variation (default, dark)
 */
#}

<section class="card-grid {% if theme %}card-grid--{{ theme }}{% endif %}">
  {% if title or description %}
    <div class="card-grid__header">
      {% if title %}
        <h2 class="card-grid__title">{{ title }}</h2>
      {% endif %}
      
      {% if description %}
        <p class="card-grid__description">{{ description }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="card-grid__container card-grid__columns--{{ columns|default(3) }}">
    {% for card in cards %}
      <div class="card-grid__item">
        {% include '../../molecules/card/card.twig' with {
          title: card.title,
          description: card.description,
          imageUrl: card.imageUrl,
          buttonText: card.buttonText,
          theme: card.theme|default(theme)
        } %}
      </div>
    {% endfor %}
  </div>
</section>
