{#
/**
 * @file
 * Card Grid component
 *
 * Variables:
 * - cards: Array of card objects, each containing:
 *   - image: The image object with src and alt properties
 *   - title: The card title
 *   - description: The card description text
 *   - button: The button object with text and type properties
 * - columns: Number of columns (2-4)
 * - gap: Gap size between cards (small, medium, large)
 */
#}

{% set grid_classes = [
  'card-grid',
  columns ? 'card-grid--cols-' ~ columns : 'card-grid--cols-3',
  gap ? 'card-grid--gap-' ~ gap : 'card-grid--gap-medium'
]|join(' ')|trim %}

<div class="{{ grid_classes }}">
  {% for card in cards %}
    <div class="card-grid__item">
      {% include '@molecules/card/card.twig' with {
        image: card.image,
        title: card.title,
        description: card.description,
        button: card.button,
        background_color: card.background_color,
        image_size: card.image_size
      } %}
    </div>
  {% endfor %}
</div>
